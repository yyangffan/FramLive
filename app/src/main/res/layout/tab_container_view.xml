<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_5">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <com.tyxh.framlive.views.tabviews.TabIconView
            android:id="@+id/iv_tab_icon"
            android:layout_width="@dimen/tab_icon_width"
            android:layout_height="@dimen/tab_icon_height"
            android:layout_gravity="center_horizontal|bottom"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/iv_tab_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_2"
            android:background="@drawable/bg_circle_red"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:minWidth="@dimen/dp_18"
            android:minHeight="@dimen/dp_18"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="3" />

        <View
            android:id="@+id/iv_note"
            android:layout_width="@dimen/red_note_widtheight"
            android:layout_height="@dimen/red_note_widtheight"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/bg_circle_red"
            android:visibility="gone"
            tools:visibility="visible" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_tab_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/dp_3"
        android:textColor="@color/gray"
        android:textSize="12sp"
        tools:text="主页" />

</RelativeLayout>